{
  "name": "lections",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "slidev build",
    "dev": "slidev --open",
    "export": "slidev export --with-clicks"
  },
  "dependencies": {
    "@slidev/cli": "^52.2.4",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "slidev-addon-python-runner": "^0.1.3",
    "slidev-theme-sirius-college": "^0.4.1",
    "vue": "^3.5.21"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "slides.md",
          "pages/*.md",
          "slides/lection_*/slides.md",
          "slides/*.md"
        ],
        "options": {
          "parser": "slidev",
          "plugins": [
            "prettier-plugin-slidev"
          ],
          "max_line_length": 80
        }
      }
    ]
  }
}
